<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:orientation="vertical"
    tools:context=".Add_item_via_fab">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/txtTitle"
        android:text="Edit this Item"/>

    <EditText
        android:id="@+id/edit_trip_name"
        android:layout_width="390dp"
        android:layout_height="69dp"
        android:layout_marginBottom="11dp"
        android:hint="enter trip name: "
        android:inputType="text"
        android:textSize="23dp"
        android:padding="11dp"/>

    <EditText
        android:id="@+id/edit_destiation"
        android:layout_width="390dp"
        android:layout_height="69dp"
        android:layout_marginBottom="11dp"
        android:hint="enter destiantion: "
        android:inputType="text"
        android:textSize="23dp"
        android:padding="11dp"/>
    <EditText
        android:layout_width="390dp"
        android:layout_height="69dp"
        android:layout_marginBottom="50dp"
        android:hint="enter price: "
        android:inputType="text"
        android:textSize="23dp"
        android:padding="11dp" />
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <RadioButton
            android:id="@+id/c_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City Break"
            android:onClick="checkBtn"
            android:checked="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sea Side"
            android:onClick="checkBtn"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mountains"
            android:onClick="checkBtn"/>

    </RadioGroup>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date_picker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date_picker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp" />
    </RelativeLayout>

</LinearLayout>
    
